<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditOfferPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EditOfferPageFragment">


        <ImageView
            android:id="@+id/editProductImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="32dp"
            android:background="@color/backgroundcolor"
            android:scaleType="centerCrop"
            android:tooltipText="add image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_image_search_24" />

        <EditText
            android:id="@+id/editProductTitleTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="product name"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductImage" />

        <EditText
            android:id="@+id/editProductBrandTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="brand name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/editProductTitleTxt" />


        <EditText
            android:id="@+id/editProductCategoryTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="category"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductTitleTxt" />

        <EditText
            android:id="@+id/editProductSubCategoryTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="sub category"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/editProductCategoryTxt" />

        <EditText
            android:id="@+id/editProductActualPriceTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="actual price"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductCategoryTxt" />

        <EditText
            android:id="@+id/editProductDiscountPriceTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount price"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/editProductSubCategoryTxt" />

        <EditText
            android:id="@+id/editDiscountStartDateTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="start date"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductActualPriceTxt" />

        <EditText
            android:id="@+id/editDiscountEndDateTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="end date"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/editProductDiscountPriceTxt" />

        <EditText
            android:id="@+id/editProductWeighTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="weigh"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editDiscountStartDateTxt" />

        <TextView
            android:id="@+id/editDiscountPercTxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount %"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/editDiscountEndDateTxt" />



        <EditText
            android:id="@+id/editProductDescriptionTxt"
            android:layout_width="365dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductWeighTxt" />

        <Button
            android:id="@+id/deleteProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintBottom_toBottomOf="@+id/updateProductBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/updateProductBtn"
            app:layout_constraintTop_toTopOf="@+id/updateProductBtn" />

        <Button
            android:id="@+id/updateProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Update"
            app:layout_constraintEnd_toStartOf="@+id/deleteProductBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProductDescriptionTxt" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ProgressBar
            android:id="@+id/editProductProgBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/updateProductBtn"
            app:layout_constraintEnd_toEndOf="@+id/deleteProductBtn"
            app:layout_constraintStart_toStartOf="@+id/updateProductBtn"
            app:layout_constraintTop_toTopOf="@+id/updateProductBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>