<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EditOfferPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.EditOfferPageFragment">

        <ImageView
            android:id="@+id/editProductImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:tooltipText="update image"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_image" />


        <EditText
            android:id="@+id/editProductTitleTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="product name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/editProductImage"
            />

        <EditText
            android:id="@+id/editProductBrandTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="brand name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editProductTitleTxt" />

        <EditText
            android:id="@+id/editProductCategoryTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="category"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editProductBrandTxt" />

        <EditText
            android:id="@+id/editProductSubCategoryTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="sub category"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editProductCategoryTxt" />

        <EditText
            android:id="@+id/editProductActualPriceTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="actual price"
            android:inputType="text"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editNoProductImage" />

        <EditText
            android:id="@+id/editProductDiscountPriceTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount price"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/editProductActualPriceTxt" />

        <EditText
            android:id="@+id/editDiscountStartDateTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="start date"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProductActualPriceTxt" />

        <EditText
            android:id="@+id/editDiscountEndDateTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="end date"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editProductDiscountPriceTxt" />


        <EditText
            android:id="@+id/editProductWeighTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="weigh"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editDiscountStartDateTxt" />

        <TextView
            android:id="@+id/editDiscountPercTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount %"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editDiscountEndDateTxt" />

        <EditText
            android:id="@+id/editProductDescriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProductWeighTxt" />

        <Button
            android:id="@+id/deleteProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/updateProductBtn"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/editProductProgBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="542dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/updateProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginTop="32dp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editProductDescriptionTxt"
            app:layout_constraintEnd_toStartOf="@id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.47" />

        <CheckBox
            android:id="@+id/editNoProductImage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="No Product Image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:buttonTint="@color/appColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/editProductImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
