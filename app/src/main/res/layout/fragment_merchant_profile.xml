<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MerchantProfileFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Update Merchant Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mShopName"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Shop Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/mCustName"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="user name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mShopName" />

        <AutoCompleteTextView
            android:id="@+id/mprofileCity"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="city"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mCustName"/>

        <AutoCompleteTextView
            android:id="@+id/mprofileDistrict"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="district"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mprofileCity"/>



        <AutoCompleteTextView
            android:id="@+id/mprofileState"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="state"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mprofileDistrict"/>



    <EditText
        android:id="@+id/mprofilePincode"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="pincode"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mprofileState" />

    <Button
        android:id="@+id/updatemProfileBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="sans-serif"
        android:onClick="onUpdateProfileBtnClicked"
        android:text="Update"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mprofilePincode"
        app:layout_constraintVertical_bias="0.09" />

    <ProgressBar
        android:id="@+id/mprofileProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/updatemProfileBtn"
        app:layout_constraintEnd_toEndOf="@+id/updatemProfileBtn"
        app:layout_constraintStart_toStartOf="@+id/updatemProfileBtn"
        app:layout_constraintTop_toTopOf="@+id/updatemProfileBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>