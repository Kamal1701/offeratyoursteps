    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Update Address"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profileAddress1"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Door no, street"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileCityInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileAddress1">

        <AutoCompleteTextView
            android:id="@+id/profileCity"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileDistrictInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileCityInputLayout">

        <AutoCompleteTextView
            android:id="@+id/profileDistrict"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileStateInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="330dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDistrictInputLayout">

        <AutoCompleteTextView
            android:id="@+id/profileState"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/profileStateInputLayout"
            app:layout_constraintEnd_toEndOf="@+id/profileStateInputLayout"
            app:layout_constraintStart_toStartOf="@+id/profileStateInputLayout"
            app:layout_constraintTop_toTopOf="@+id/profileStateInputLayout"/>

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/profilePincode"
        android:layout_width="330dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Pincode"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileStateInputLayout" />

    <Button
        android:id="@+id/updateProfileBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="sans-serif"
        android:onClick="onUpdateProfileBtnClicked"
        android:text="Update"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePincode"
        app:layout_constraintVertical_bias="1.0" />

    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/updateProfileBtn"
        app:layout_constraintEnd_toEndOf="@+id/updateProfileBtn"
        app:layout_constraintStart_toStartOf="@+id/updateProfileBtn"
        app:layout_constraintTop_toTopOf="@+id/updateProfileBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>