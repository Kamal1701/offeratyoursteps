<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Update Address"
        android:textSize="24dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="95dp"/>

    <EditText
        android:id="@+id/profileAddress1"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Door no, street"
        android:inputType="text"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileCityInputLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp">

        <AutoCompleteTextView
            android:id="@+id/profileCity"
            android:layout_width="360dp"
            android:layout_height="54dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint=""
            android:inputType="text"
            android:text="Select city" />
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/profileDistrict"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="District"
        android:inputType="text"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/profileState"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="State"
        android:inputType="text"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/profilePincode"
        android:layout_width="360dp"
        android:layout_height="44dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/register_edittext_sytle"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Pincode"
        android:inputType="text"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="16dp"/>

    <Button
        android:id="@+id/updateProfileBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:fontFamily="sans-serif"
        android:onClick="onUpdateProfileBtnClicked"
        android:text="Update"
        android:textSize="18sp"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="90dp"/>

    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="160dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />


</FrameLayout>