<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.AddOfferFragment">

        <ImageView
            android:id="@+id/addProductImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:tooltipText="add image"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/upload_image" />


        <EditText
            android:id="@+id/addProductTitleTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="product name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/addProductImage"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/addProductBrandTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="brand name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addProductTitleTxt" />

        <EditText
            android:id="@+id/addProductCategoryTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="category"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addProductBrandTxt" />

        <EditText
            android:id="@+id/addProductSubCategoryTxt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="sub category"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addProductCategoryTxt" />

        <EditText
            android:id="@+id/addProductActualPriceTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="actual price"
            android:inputType="text"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/noProductImage" />

        <EditText
            android:id="@+id/addProductDiscountPriceTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount price"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/addProductActualPriceTxt" />

        <EditText
            android:id="@+id/addDiscountStartDateTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="start date"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addProductActualPriceTxt" />

        <EditText
            android:id="@+id/addDiscountEndDateTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="end date"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addProductDiscountPriceTxt" />


        <EditText
            android:id="@+id/addProductWeighTxt"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="weigh"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addDiscountStartDateTxt" />

        <TextView
            android:id="@+id/addDiscountPercTxt"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:hint="discount %"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addDiscountEndDateTxt" />

        <EditText
            android:id="@+id/addProductDescriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:gravity="start|top"
            android:hint="description"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addProductWeighTxt" />

        <Button
            android:id="@+id/cancelProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="48dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/addProductBtn"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/addProductProgBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="542dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/addProductBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginTop="32dp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addProductDescriptionTxt"
            app:layout_constraintEnd_toStartOf="@id/guideline"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.47" />

        <CheckBox
            android:id="@+id/noProductImage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="No Product Image"
            android:textSize="16sp"
            android:textStyle="bold"
            android:buttonTint="@color/appColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/addProductImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
