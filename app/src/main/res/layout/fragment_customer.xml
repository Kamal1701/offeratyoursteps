<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor"
        android:fitsSystemWindows="true"
        tools:context=".fragments.CustomerFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/regCustUserNameTxt"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="username"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/regCustUserEmailTxt"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="email address"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regCustUserNameTxt" />

        <EditText
            android:id="@+id/regCustPasswordTxt"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regCustUserEmailTxt" />


        <AutoCompleteTextView
            android:id="@+id/registerCustCity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="city"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regCustPasswordTxt" />

        <AutoCompleteTextView
            android:id="@+id/registerCustState"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_edittext_sytle"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="state"
            android:inputType="text"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerCustCity" />


        <Button
            android:id="@+id/regCustUserRegisterBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:onClick="onCustRegisterBtnClicked"
            android:text="Register"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerCustState" />

        <Button
            android:id="@+id/regCustLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Alreay have a Account? Sign In"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            app:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/regCustUserRegisterBtn"
            app:layout_constraintVertical_bias="0.0" />

        <ProgressBar
            android:id="@+id/regCustProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/regCustUserRegisterBtn"
            app:layout_constraintEnd_toEndOf="@+id/regCustUserRegisterBtn"
            app:layout_constraintStart_toStartOf="@+id/regCustUserRegisterBtn"
            app:layout_constraintTop_toTopOf="@+id/regCustUserRegisterBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>